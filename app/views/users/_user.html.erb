<% if users %>
  <div class="row">
    <% users.each do |user| %>
      <div class="user">
        <div class="col-md-2 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <img src="<%= gravatar_url(user) %>" alt="">
            </div>
            <div class="panel-body text-center">
              <p class="app-title"><%= link_to user.name, user_path(user) %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>