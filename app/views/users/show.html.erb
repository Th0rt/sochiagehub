<div class="container">
  <div class="user-profile">
    <div class="icon text-center">
      <img src="<%= gravatar_url(@user, size: 100) %>" alt="" class="img-circle">
    </div>
    <div class="name text-center">
      <h1><%= @user.name %></h1>
    </div>
    <div>
      <% if current_user.id == @user.id %>
        <%= render 'friendcodes/edit',user: @user, apps: @apps, friendcodes: @friendcodes %>
      <% else %>
        <%= render 'friendcodes/show',user: @user, apps: @apps, friendcodes: @friendcodes %>
      <% end %>
    </div>
  </div>

</div>